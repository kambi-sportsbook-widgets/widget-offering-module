{
  "name": "kambi-offering-api-module",
  "version": "3.3.0",
  "description": "Offering module extracted from core library",
  "main": "lib/index.js",
  "scripts": {
    "prebuild": "rm -rf lib && mkdir lib",
    "build": "babel src --out-dir lib -s --ignore spec.js,test.js,testHelpers.js,types/*.js",
    "start": "babel src --out-dir lib -s --watch --ignore spec.js,test.js,testHelpers.js,types/*.js",
    "test": "jest",
    "flow": "flow",
    "flow:watch": "flow-watch",
    "precommit": "npm test && lint-staged",
    "prepublishOnly": "npm run build"
  },
  "sideEffects": false,
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-flow": "^7.0.0",
    "babel-jest": "^24.8.0",
    "flow-watch": "^1.1.3",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.15.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2
  },
  "dependencies": {
    "flow-bin": "^0.75.0"
  }
}
