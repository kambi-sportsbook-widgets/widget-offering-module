{
  "version": "0.2.0",
  "configurations": [{
    "type": "node",
    "request": "launch",
    "name": "Jest Current File",
    "cwd": "${workspaceRoot}",
    "program": "${workspaceFolder}/node_modules/jest/bin/jest",
    "args": ["${relativeFile}",
      "--runInBand", "--colors"
    ],
    "console": "integratedTerminal",
    "internalConsoleOptions": "neverOpen",
    "stopOnEntry": false,
  }]
}